{
	"MakefileCPP": {
		"prefix": ["makefile_cpp"],
		"description": "Makefile creator CPP",
		"body": [
			"CC=c++",
			"NAME = ${1:name}",
			"SRCS = ${VIM:system('echo *.cpp')}HEADER = ${VIM:system('echo *.hpp')}OBJS = \\$(SRCS:.cpp=.o)",
			"CFLAGS = -Wall -Wextra -Werror --std=c++98",
			"LDFLAGS = ",
			"",
			"all:\\$(NAME)",
			"",
			"\\$(NAME): \\$(OBJS)",
			"\t\\$(CC) \\$(OBJS) \\$(LDFLAGS) -o \\$(NAME)",
			"",
			"%.o : %.cpp \\$(HEADER)",
			"\t\\$(CC) \\$(CFLAGS) \\$< -c -o \\$@",
			"",
			"fclean: clean",
			"\trm -f \\$(NAME)",
			"",
			"clean:",
			"\trm -f \\$(OBJS)",
			"",
			"run: all",
			"\t./\\$(NAME) \\$(ARGS)",
			"",
			"run2: all",
			"\tvalgrind --show-leak-kinds=all --leak-check=full ./\\$(NAME) \\$(ARGS)",
			"",
			"re: fclean all",
			"",
			".PHONY: all fclean clean run run2 re",
		]
	},
	"MakefileC": {
		"prefix": ["makefile_c"],
		"description": "Makefile creator C",
		"body": [
			"CC=clang",
			"NAME = ${1:name}",
			"SRCS = ${VIM:system('echo *.c')}HEADER = ${VIM:system('echo *.h')}OBJS = \\$(SRCS:.c=.o)",
			"CFLAGS = -Wall -Wextra -Werror",
			"LDFLAGS = ",
			"",
			"all:\\$(NAME)",
			"",
			"\\$(NAME): \\$(OBJS)",
			"\t\\$(CC) \\$(OBJS) \\$(LDFLAGS) -o \\$(NAME)",
			"",
			"%.o : %.c \\$(HEADER)",
			"\t\\$(CC) \\$(CFLAGS) \\$< -c -o \\$@",
			"",
			"fclean: clean",
			"\trm -f \\$(NAME)",
			"",
			"clean:",
			"\trm -f \\$(OBJS)",
			"",
			"run: all",
			"\t./\\$(NAME) \\$(ARGS)",
			"",
			"run2: all",
			"\tvalgrind --show-leak-kinds=all --leak-check=full ./\\$(NAME) \\$(ARGS)",
			"",
			"re: fclean all",
			"",
			".PHONY: all fclean clean run run2 re",
		]
	}
}
