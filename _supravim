#compdef supravim

_arguments -C -S -s $endopt \
	'(-s --status)'{-s,--status}'[show your configuration]' \
	'(-t --theme)'{-t,--theme}'[change your vim theme]: :->theme' \
	'(-e --enable)'{-e,--enable}'[enable options]: :->option'	\
	'(-d --disable)'{-d,--disable}'[disable options]: :->option' \
	'--update[could be launch with dev to update ythe dev branch]: :->update'\
	'--switch[switch between your vim config and supravim one]' \
	'--uninstall[uninstall supravim]' \
	'(-v --version)'{-v,--version}'[display your current supravim version]'

case "$state" in
	theme)
		local -a themes
		themes=('molokai' 'gruvbox' 'dracula' 'atom' 'iceberg' 'onedark' 'onehalf' 'onelight' 'pablo' 'Tomorrow-Night' 'Tomorrow-Night-Eighties')
		_describe 'supravim' themes;;
	option)
		local -a options
		options=('norme:show in real time your norm errors in vim' 'normeHeader:display Missing Header 42 error' 'mouse:use of mouse to move in your vim' 'tree:left window automatically opened with files in current dir' 'icons:icons in nerdtree element' 'cflags:compile with flags -Wall -Werror -Wextra')
		_describe 'supravim' options;;
	update)
		local -a branch
		branch=(':master branch (stablest version)' 'dev:branch with potential unstable new features')
		_describe 'supravim' branch;;
esac
